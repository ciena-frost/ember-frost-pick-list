{{!-- BEGIN-SNIPPET content-api }}
{{frost-pick-list
  ...
  listComponent=(component 'frost-table'
      columns=<Array of columns>
      onSelectionChange=(action '<String>')
    )
  selectedItems=<Array of selected items>
  items=<Array of all items>
  itemKey='<Row that holds the unique key>'
  sortOrder=<Array of string>
  sortingProperties=<Array of objects>
  sortOrderMax=<number>
}}
{{ END-SNIPPET --}}

<div class='addon-demo-api'>
  <div class='addon-demo-title'>
    Notes
  </div>
  <div class='addon-demo-notes'>
    <p>
      To have your list content displayed inside a frost-table.
    </p>
  </div>
  <div class='addon-demo-title'>
    API
  </div>
  <div class='addon-demo-snippet'>
    {{code-snippet name='content-api.hbs'}}
  </div>
</div>
<div class='addon-demo-live'>
  <div class='addon-demo-title'>
    Live demo
  </div>
  <div class='addon-demo-snippet'>
    <i>Demo controller</i>
    {{code-snippet name='pick-list-controller.js'}}
  </div>
  <div class='addon-demo-snippet'>
    <i>Demo template</i>
    {{code-snippet name='content-frost-pick-list.hbs'}}
  </div>
  <div class='addon-demo-component'>
    {{! BEGIN-SNIPPET content-frost-pick-list }}
    {{frost-pick-list
      hook='frostPickListFromTable'
      listComponent=(component 'frost-table'
        columns=columns
        onSelectionChange=(action 'onSelectChange')
        itemKey='uuid'
      )
      selectedItems=selectedItems
      items=model
      sortOrder=sortOrder
      sortingProperties=sortingProperties
      sortOrderMax=2
    }}
    {{! END-SNIPPET }}
  </div>
</div>